{
    "openapi": "3.0.0",
    "info": {
        "title": "API Specification Go Application",
        "version": "1.0.0",
        "description": "This is a sample API specification for a Go application."
    },
    "servers": [
        {
            "url": "https://localhost:3000/api",
            "description": "development server"
        }
    ],
    "components": {
        "schemas": {
            "Category": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "number"
                    },
                    "status": {
                        "type": "string"
                    },
                    "data": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "number"
                            },
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "CreateOrUpdateCategory": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "categoryAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "x-api-key",
                "description": "API key for accessing the Categories API"
            }
        }
    },
    "paths": {
        "/categories": {
            "get": {
                "tags": [
                    "Categories API"
                ],
                "summary": "List all categories",
                "description": "List all categories",
                "security": [
                    {
                        "categoryAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of categories",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Category"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Categories API"
                ],
                "summary": "Create a new category",
                "security": [
                    {
                        "categoryAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateOrUpdateCategory"
                            }
                        }
                    }
                },
                "description": "Create a new category",
                "responses": {
                    "201": {
                        "description": "Category created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Category"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/getCategory/{id}": {
            "get": {
                "tags": [
                    "Categories API"
                ],
                "summary": "Get a category by ID",
                "description": "Get a category by ID",
                "security": [
                    {
                        "categoryAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "categoryId",
                        "in": "path",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successfully retrieved category",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Category"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Category not found"
                    }
                }
            },
            "put": {
                "tags": [
                    "Categories API"
                ],
                "summary": "Update a category by ID",
                "description": "Update a category by ID",
                "security": [
                    {
                        "categoryAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "categoryId",
                        "in": "path",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateOrUpdateCategory"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Category updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Category"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Category not found"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Categories API"
                ],
                "summary": "Delete a category by ID",
                "description": "Delete a category by ID",
                "security": [
                    {
                        "categoryAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "categoryId",
                        "in": "path",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Category deleted successfully"
                    },
                    "404": {
                        "description": "Category not found"
                    }
                }
            }
        }
    }
}